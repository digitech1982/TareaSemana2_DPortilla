<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TareaSemana2_DPortilla.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Sistema de Notas!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Entry x:Name="txtUsuario" Placeholder="Ingrese el Usuario"/>
        <Entry x:Name="txtPass" Placeholder="Ingrese su contrasena"/>

        <Button x:Name="btnAbrir" Text="Abrir ventana 2" Clicked="btnAbrir_Clicked"/>

    </StackLayout>

</ContentPage>
